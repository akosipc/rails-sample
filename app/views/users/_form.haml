.modal-content
  .modal-header
    %button.close{ data: { dismiss: "modal" } }
      %span= "&times;".html_safe
    %h4.modal-title Edit Profile

  = reform_for @user do |f|
    .modal-body
      = f.input :first_name, class: "form-control"
      = f.input :last_name, class: "form-control"
      = f.input :username, class: "form-control"
      = f.input :avatar, class: "form-control", as: :file

    .modal-footer
      %button.btn.btn-default{ data: { dismiss: "modal" } } Cancel
      = f.submit "Edit", class: "btn btn-primary"

:javascript
  $(function(){ RigPirate.Modals.close(); })
