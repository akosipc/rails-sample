- if rewards.any?
  %table.table.table-condensed.table-striped.table-hover.table-centered.table-bordered
    %thead
      %tr
        %th Reward Name
        %th Amount
        %th Status
        %th Actions
    %tbody
      - rewards.each do |reward|
        %tr
          %td= reward.name
          %td= reward.amount
          %td= reward.status
          %td
            - unless reward.status == "Requested"
              = link_to bounty_path(reward), data: { toggle: "tooltip", placement: "top" }, title: "Claim Reward", method: :put do
                %i.fa.fa-check-square

  .text-center
    = paginate @rewards
- else
  .alert.alert-info
    %i.fa.fa-info-circle
    You don't have any rewards as of right now.

