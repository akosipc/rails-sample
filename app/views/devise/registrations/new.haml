.container
  .row
    .col-xs-offset-2.col-xs-8
      %h2 Sign up
      = reform_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!

        = f.input :email, type: "email", autofocus: true, class: "form-control"
        = f.input :password, type: "password", autocomplete: "off", class: "form-control"
        = f.input :password_confirmation, type: "password", class: "form-control"
        = f.input :first_name, class: "form-control"
        = f.input :last_name, class: "form-control"
        = f.input :username, class: "form-control"
        = f.action "Sign up", class: "btn btn-primary"

        = render "devise/shared/links"
        = link_to "Code of Conduct", privacy_path
