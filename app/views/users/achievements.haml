.row
  .col-lg-3.col-md-3.col-xs-3.sidebar
    = render "shared/sidebar"
  .col-lg-9.col-md-9.col-xs-9.central

    .row
      .col-lg-4.col-md-4.col-xs-4
        .panel.panel-primary
          .panel-heading Quests Done This Month
          .panel-body
            .text-center
              %h3= @quests_completed.count

      .col-lg-4.col-md-4.col-xs-4
        .panel.panel-primary
          .panel-heading Gold Earned This Month
          .panel-body
            .text-center
              %h3= @gold_earned

      .col-lg-4.col-md-4.col-xs-4
        .panel.panel-primary
          .panel-heading Exp Earned This Month
          .panel-body
            .text-center
              %h3= @exp_earned


    .panel.panel-primary
      .panel-heading Achievements
      .panel-body
        - if @achievements.present?
          = render "table", achievements: @achievements
        - else
          .alert.alert-info
            %i.fa.fa-info-circle
            You currently have no achievements.

