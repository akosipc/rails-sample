.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      - if user_signed_in?
        = link_to "Rigpirate" , root_path, class: "navbar-brand"
      - else
        = link_to "Rigpirate" , authenticated_root_path, class: "navbar-brand"
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        -#- if user_signed_in?
          -#%li.active= link_to "Status" , feed_path
        -#%li= link_to "About", about_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to "Quests", "#"
          %li= link_to "New Post", new_post_path, role: "history-trigger", data: { toggle: "modal" , target: "#modal" }
          %li= link_to "Messages", "#"
          %li= link_to "Profile", profile_path
          %li= link_to "Friends", user_friendships_path(current_user)
          %li= link_to "Log Out", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign up", new_user_registration_path
          %li= link_to "Login", new_user_session_path
